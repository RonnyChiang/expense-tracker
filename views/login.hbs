<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      <div>
        {{> message}}
      </div>
      <form action="/users/login" method="POST" class=" mt-3">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="example@gmail.com"
            value="{{ email }}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password"
            value="{{ password }}">
        </div>
        <div class="row">
          <button type="submit" class="btn btn-primary btn-block mt-5 mb-3">Login</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
          <a href="/auth/login/google" class="btn btn-info btn-block">google Login</a>
        </div>
      </form>
      </form>
      <p>
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>